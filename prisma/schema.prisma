datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BudgetMonth {
  id  Int @id @default(autoincrement())
  month Int
  year Int
  extraIncome String @default("0")
  categories  BudgetMonthCategory? @relation(fields: [budgetMonthCategoryId], references: [id])
  budgetMonthCategoryId Int?
}

model BudgetMonthCategory {
  id Int @id @default(autoincrement())
  name String
  amountBudgeted String
  budgetMonths BudgetMonth[]
  transactions  Transaction? @relation(fields: [transactionId], references: [id])
  transactionId Int?
}

model CategoryTemplate {
  id Int @id @default(autoincrement())
  name String @unique
  amountBudgeted String
}

model Transaction {
  id Int @id @default(autoincrement())
  description String
  amount String
  date DateTime
  transactionType String 
  budgetCategories BudgetMonthCategory[]
}